% Title page
\defbeamertemplate*{title page}{uis}[1][]
{
  \begin{columns}
		\column{.22\paperwidth}% ADJUST
		\mbox{}
		\column{.78\paperwidth}% ADJUST
    \vskip1.2cm%
    \begin{beamercolorbox}[wd=10cm,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \ifx\insertsubtitle\@empty%
      {\vskip.2cm}
    \else%
      {\vskip.1cm%
      \begin{beamercolorbox}[wd=10cm,#1]{subtitle}
        \usebeamerfont{author}\insertsubtitle%
      \end{beamercolorbox}
      \vskip.2cm}
    \fi
    \begin{beamercolorbox}[wd=10cm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
    \ifx\insertinstitute\@empty%
      {}
    \else%
      {\vskip.1cm
      \begin{beamercolorbox}[wd=10cm,#1]{institute}
        \usebeamerfont{author}\insertinstitute%
      \end{beamercolorbox}}
    \fi
    \vskip.1cm
    \begin{beamercolorbox}[wd=10cm,#1]{date}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
  \end{columns}
}

